{
    "compilerOptions": {
        "module": "CommonJS", 
        "removeComments": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "incremental": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators":true,
    },
    "include": [
        "src/**/*"
    ]
}